<struct typename="RadioRx">
	<!-- Packet going out from radio program to control program -->
	
	<struct typename="Robot">
		<member type="bool" name="valid" />
        
        <!-- true if this robot's data is new for this frame -->
        <member type="bool" name="updated" />
        
        <member type="uint8" name="packetLoss" />
        <member type="float" name="rssi" />
        <member type="uint8" name="tuning" />
        <member type="float" name="battery" />
        <member type="float" name="capacitor" />
        
        <array type="bool" name="motorFault" size="5" />

        <array type="uint8" name="encoders" size="5" />
	</struct>
		
	<!-- up to five robots can be controlled -->
	<array type="Robot" name="robots" size="5" />
</struct>