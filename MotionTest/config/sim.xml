
<motion>

    <linearController name="pos">
        <kp value="120.0" />
        <kv value="10" />
        <deadband x="0.01" y="0.01"/>
    </linearController>

    <linearController name="angle">
        <kp value="80.0" />
        <kv value="20.0" />
        <deadband x="0.01" y="0.01"/>
    </linearController>

    <robotData>
        <!-- Wheels
            /3 ^ 0\
                ^
            \2 ^ 1/

            Axels are specified on robot coord system
        -->
        <axels>
            <axel x="1" y="1" />
            <axel x="1" y="-1" />
            <axel x="-1" y="-1" />
            <axel x="-1" y="1" />
        </axels>
        <!-- The max acceleration is based on a delta_t of 11ms !-->
        <maxAccel value = "300"/>
        <maxWheelVel value = "127"/>
    </robotData>

</motion>
