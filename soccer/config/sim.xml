
<motion>

    <linearController name="pos">
        <kp value="65.0" />
        <kd value="2" />
        <deadband x="0.01" y="0.01"/>
    </linearController>

    <linearController name="angle">
        <kp value="80.0" />
        <ki value="1.0" />
        <deadband x="0.01" y="0.01"/>
    </linearController>

    <robotData>
        <!-- Wheels
            /3 ^ 0\
                ^
            \2 ^ 1/

            Axels are specified on robot coord system
        -->
        <axels>
            <axel x="1" y="1" />
            <axel x="1" y="-1" />
            <axel x="-1" y="-1" />
            <axel x="-1" y="1" />
        </axels>
        <!-- The max acceleration is based on a delta_t of 11ms !-->
        <maxAccel value = "100"/>
        <maxWheelVel value = "127"/>
        <maxRobotVel value = "140"/>
    </robotData>

    <worldModel>
        <self_kf_enable value = "false"/>
        <opp_kf_enable value = "false"/>
    </worldModel>

    <robotKF name = "self">
        <cmd_scale_factor value = "1"/>
        <cmd_scale_factor_angle value = "1"/>
        <velBufSize value = "10">
    </robotKF>

    <robotKF name = "opp">
        <velBufSize value = "10">
    </robotKF>

</motion>
