// The name should appear in debugging output.
NAME "reset"

// A list of predicates separated by commas.
// All must be true for this play to be selected.
// If REQUIRE is not given, this play may be chosen at any time.
REQUIRE stopped

ROLE @goalie
	move pos=(0, .75) face=(0, 1)
	
ROLE @fb1
	move pos=(-.2, .75) face=(-.2, 1)
	
ROLE @fb2
	move pos=(.2, .75) face=(.2, 1)
	
ROLE @hb
	move pos=(-.4, .75) face=(-.4, 1)
	
ROLE @hb2
	move pos=(.4, .75) face=(.4, 1)
